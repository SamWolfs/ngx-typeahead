{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "skipLibCheck": true,
    "types": [],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false
  },
  "files": ["public_api.ts"],
  "exclude": ["node_modules", "example"],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "ngx-typeahead.js",
    "flatModuleId": "ngx-typeahead",
    "enableIvy": false
  }
}
